<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDE7F6">

    <TextView
        android:id="@+id/tvVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Verification"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCaptureSelfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvVerification"
        android:layout_marginTop="16dp"
        android:text="Capture Selfie"
        android:backgroundTint="#9575CD"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSubmitVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCaptureSelfie"
        android:layout_marginTop="16dp"
        android:text="Submit Verification"
        android:backgroundTint="#9575CD"
        android:textColor="#FFFFFF" />

</RelativeLayout>
