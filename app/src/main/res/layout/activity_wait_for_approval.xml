<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDE7F6">

    <TextView
        android:id="@+id/tvPlaceholderBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="[Back]"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvPlaceholderImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="[Image Placeholder]"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvApprovalMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPlaceholderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Please wait for 3-5 days for admin approval..."
        android:textSize="18sp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvApprovalMessage"
        android:layout_marginTop="32dp"
        android:text="Go back"
        android:backgroundTint="#9575CD"
        android:textColor="#FFFFFF" />
</RelativeLayout>
