<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDE7F6">

    <TextView
        android:id="@+id/tvCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create a Post"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/ivAttachImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvCreatePost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#CCCCCC"
        android:contentDescription="Attach an image" />

    <TextView
        android:id="@+id/tvAttachImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAttachImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Attach an image"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAttachImage"
        android:layout_marginTop="16dp"
        android:hint="Title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/edit_text_background" />

    <TextView
        android:id="@+id/tvTimePlaceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTitle"
        android:layout_marginTop="16dp"
        android:text="Time and Place:"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvTimePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTimePlaceLabel"
        android:layout_marginTop="8dp"
        android:text="Add Time and Place"
        android:textSize="16sp"
        android:textColor="#AAAAAA" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTimePlace"
        android:layout_marginTop="16dp"
        android:hint="Type a description"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/edit_text_background" />

    <TextView
        android:id="@+id/tvSelectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDescription"
        android:layout_marginTop="16dp"
        android:text="Select Category"
        android:textSize="16sp"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectCategory"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:contentDescription="Home Icon" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:contentDescription="Add Icon" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:contentDescription="Notifications Icon" />
    </LinearLayout>

</RelativeLayout>
